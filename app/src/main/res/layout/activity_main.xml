<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_x="0dp"-->
        <!--android:layout_y="0dp" >-->

        <LinearLayout
            android:id="@+id/users"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <!--  user1 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#73e678"
                android:gravity="center">

                <TextView
                    android:id="@+id/user_id1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="USER1"
                    android:textColor="#ffffff" />


            </RelativeLayout>

            <!--  user2 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#ef5350"
                android:gravity="center">
                <TextView
                    android:id="@+id/user_id2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="USER2"
                    android:textColor="#ffffff" />


            </RelativeLayout>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="false"
        android:layout_below="@+id/users"
        android:orientation="vertical">

        <TextView
            android:id="@+id/logs_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="This is the logs" />
    </LinearLayout>

    <AbsoluteLayout
        android:id="@+id/absoluteLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/users"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/r3"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_x="171dp"
            android:layout_y="119dp"
            app:srcCompat="@drawable/map_area_3_normal" />

        <ImageView
            android:id="@+id/r4"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_x="77dp"
            android:layout_y="185dp"
            app:srcCompat="@drawable/map_area_4_normal" />

        <ImageView
            android:id="@+id/r2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_x="-14dp"
            android:layout_y="99dp"
            app:srcCompat="@drawable/map_area_2_normal" />

        <ImageView
            android:id="@+id/r1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_x="-24dp"
            android:layout_y="264dp"
            app:srcCompat="@drawable/map_area_1_normal" />

        <ImageView
            android:id="@+id/r5"
            android:layout_width="207dp"
            android:layout_height="176dp"
            android:layout_x="151dp"
            android:layout_y="275dp"
            app:srcCompat="@drawable/map_area_5_normal" />

        <TextView
            android:id="@+id/test_logs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="150dp"
            android:layout_y="65dp"
            android:text="array is here" />

        <TextView
            android:id="@+id/test_steps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_x="13dp"
            android:layout_y="19dp"
            android:text="step: 0" />


    </AbsoluteLayout>

    <Button
        android:id="@+id/finish_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/absoluteLayout"
        android:layout_marginEnd="38dp"
        android:layout_marginRight="38dp"
        android:text="finish_test" />


    <!--</android.support.v7.widget.CardView>-->

</RelativeLayout>