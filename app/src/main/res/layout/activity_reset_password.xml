<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackBlue">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email_reset"
        android:hint="Email"
        android:singleLine="false"
        android:textColorHint="@color/colorPrimaryDark"
        android:background="@drawable/rounded_login_edit_text"
        android:padding="15dp"

        android:layout_marginTop="130dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp" />

    <TextView
        android:text="Enter current Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView2"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_marginBottom="66dp"
        android:layout_alignBottom="@+id/email_reset"
        android:layout_alignLeft="@+id/email_reset"
        android:layout_alignStart="@+id/email_reset" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password_reset"
        android:hint="Password"
        android:singleLine="false"
        android:textColorHint="@color/colorPrimaryDark"
        android:background="@drawable/rounded_login_edit_text"
        android:padding="15dp"
        android:layout_below="@+id/email_reset"
        android:layout_alignLeft="@+id/email_reset"
        android:layout_alignStart="@+id/email_reset"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp" />

    <TextView
        android:text="Enter new password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/textView3"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:layout_below="@+id/email_reset"
        android:layout_alignLeft="@+id/password_reset"
        android:layout_alignStart="@+id/password_reset"
        android:layout_marginTop="15dp" />


    <Button
        android:text="Reset password"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:id="@+id/reset_btn"
        android:background="@drawable/rounded_login_button"
        android:textColor="@android:color/background_light"
        android:layout_marginTop="19dp"
        android:layout_below="@+id/password_reset"
        android:layout_centerHorizontal="true" />

</RelativeLayout>